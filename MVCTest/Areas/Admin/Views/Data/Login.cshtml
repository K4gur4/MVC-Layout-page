@model MVCTest.Areas.Admin.Models.Admin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body >
      
            @using (Html.BeginForm("CheckLogin","Data", FormMethod.Post))
            {

                @Html.ValidationSummary(true)
    <div class="container" style="height:100vh; display:flex; justify-content:center; align-items:center; flex-direction:column">
        <h1 class="text-center" style="padding-bottom:50px">Đăng nhập hệ thống</h1>
        <div class="form-outline mb-4">

        <input type="text" name="userName" id="form2Example2" class="form-control" />
            <label class="form-label">Tên đăng nhập</label>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" name="password" id="form2Example2" class="form-control" />
            <label class="form-label" for="form2Example2">Mật khẩu</label>
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <p>@ViewBag.error</p>
            </div>


            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
        </div>
    </div>
                    }
                    <!-- Email input -->

          
</body>
</html>
